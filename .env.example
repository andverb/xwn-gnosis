# Django settings
# Copy this file to .env and fill in your values
# On Railway: Set these as environment variables in the dashboard

# =============================================================================
# REQUIRED
# =============================================================================

# Cryptographic signing key (same name as FastAPI app for consistency)
# Generate: python -c "from django.core.management.utils import get_random_secret_key; print(get_random_secret_key())"
SECRET_KEY=your-secret-key-here

# =============================================================================
# DEPLOYMENT
# =============================================================================

# Set to False in production
DEBUG=True

# Comma-separated list of allowed hosts
# Railway: Add your-app.up.railway.app
ALLOWED_HOSTS=localhost,127.0.0.1

# Environment indicator (matches FastAPI app pattern)
ENVIRONMENT=development

# =============================================================================
# FUTURE (Phase 3 - when adding database)
# =============================================================================

# DATABASE_URL=postgresql://user:password@localhost:5432/gnosis_db
# Note: Django uses different format than FastAPI's asyncpg
# FastAPI: postgresql+asyncpg://...
# Django:  postgresql://... (or postgres:// on some platforms)
